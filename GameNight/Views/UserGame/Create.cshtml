@model GameNight.Models.UserGame

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Game to my Favorites</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="text-success">@ViewBag.Error</div>
            <input class="form-control" type="hidden" asp-for="UserId" />
            <input class="form-control" type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
            <label asp-for="UserId" class="control-label"></label>
            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
        </div>*@
            <div class="form-group">
                <label asp-for="GameId" class="control-label">Games</label>
                <select asp-for="GameId" class="form-control" asp-items="@(new SelectList(ViewBag.GameId,"Id","Title"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Favorite Game" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.UserId" asp-controller="User">Back to Profile Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
