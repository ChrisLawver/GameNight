@using Microsoft.AspNetCore.Http@inject IHttpContextAccessor HttpContextAccessor<!DOCTYPE html><html lang="en"><head>    <meta charset="utf-8" />    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    <title>@ViewData["Title"] - GameNight</title>    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    <link rel="stylesheet" href="~/css/site.css" />    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cherry%20Cream%20Soda" /></head><body>    <header>        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">        <a  class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img id="nav-logo"src="~/images/logo.png"/></a>            <div class="container">                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"                        aria-expanded="false" aria-label="Toggle navigation">                    <span class="navbar-toggler-icon"></span>                </button>*@                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">                    <ul class="navbar-nav flex-grow-1" id="nav-userInfo">                        @if (!String.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("UserId")))                         {                            <li class="nav-item">                                <a class="nav-link " asp-area="" asp-controller="User" asp-action="Details" asp-route-id="@HttpContextAccessor.HttpContext.Session.GetString("UserId")">@HttpContextAccessor.HttpContext.Session.GetString("Username")</a>                            </li>                            <li class="nav-item">                                <img id="nav-profilepic" src="@HttpContextAccessor.HttpContext.Session.GetString("UserImg")"/>                            </li>                                                      <li class="nav-item">                                <a class="nav-link " asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>                            </li>                        }                        else                         {                             <li class="nav-item">                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>                            </li>                            <li class="nav-item">                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>                            </li>                        }                    </ul>                    <ul class="navbar-nav flex-grow-1">                                              <li class="nav-item">                            <a class="nav-link " asp-area="" asp-controller="User" asp-action="Index">Players</a>                        </li>                        <li class="nav-item">                            <a class="nav-link " asp-area="" asp-controller="Game" asp-action="Index">Games</a>                        </li>                        <li class="nav-item">                            <a class="nav-link " asp-area="" asp-controller="Event" asp-action="Index">Events</a>                        </li>                        <li class="nav-item">                            <a class="nav-link " asp-area="" asp-controller="User" asp-action="Leaderboard">Leaderboard</a>                        </li>                        </ul>                </div>            </div>        </nav>    </header>    <div class="container">        <main role="main" class="pb-3">            @RenderBody()        </main>    </div>    <footer class="border-top footer">        <div class="container">            &copy; 2021 - GameNight - <a href="\home\about">About Us</a>        </div>    </footer>    <script src="~/lib/jquery/dist/jquery.min.js"></script>    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>    @RenderSection("Scripts", required: false)</body></html>