@model GameNight.Models.Event

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Your Event</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div class="text-success">@ViewBag.Result</div>
            <input class="form-control" type="hidden" asp-for="OwnerId" />
            <input class="form-control" type="hidden" asp-for="Active" />
            <input class="form-control" type="hidden" asp-for="Owner" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayedOn" class="control-label">Date of Event: </label>
                <input asp-for="PlayedOn" class="form-control" />
                <span asp-validation-for="PlayedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameId" class="control-label">Game: </label>
                <select asp-for="GameId" class="form-control" asp-items="@(new SelectList(ViewBag.Games,"Id","Title"))"></select>
                <span asp-validation-for="GameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
